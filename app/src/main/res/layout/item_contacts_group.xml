<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="25dp">

        <TextView
            android:id="@+id/item_contacts_group_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_contacts_group_tv_positional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_contacts_group_tv_name"
            android:layout_toLeftOf="@+id/item_contacts_group_btn_call"
            android:layout_toRightOf="@id/item_contacts_group_tv_name"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="#858C93" />

        <TextView
            android:id="@+id/item_contacts_group_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_contacts_group_tv_name"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/item_contacts_group_tv_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_contacts_group_tv_positional"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_contacts_group_tv_phone"
            android:textColor="@color/gray_text" />

        <Button
            android:id="@+id/item_contacts_group_btn_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/contact_list_phone"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>