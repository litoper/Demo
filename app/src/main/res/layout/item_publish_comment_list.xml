<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.kadh.view.CircleImageView.CircleImageView
        android:id="@+id/item_comment_cv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="13dp"
        android:src="@mipmap/personal_head" />

    <TextView
        android:id="@+id/item_comment_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_comment_cv_head"
        android:layout_toRightOf="@id/item_comment_cv_head"
        android:paddingTop="3dp"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_comment_tv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_comment_tv_name"
        android:layout_alignParentRight="true"
        android:paddingRight="13dp"
        android:text="删除"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_comment_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_comment_tv_name"
        android:layout_below="@id/item_comment_tv_name"
        android:paddingTop="3dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_comment_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_comment_tv_time"
        android:layout_below="@id/item_comment_tv_time"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp" />
</RelativeLayout>