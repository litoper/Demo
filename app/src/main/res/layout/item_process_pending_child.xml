<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_process_pending_single_iv_readed"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_dot_red" />

        <TextView
            android:id="@+id/item_process_pending_single_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="流程名称"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_process_pending_single_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_process_pending_single_tv_title"
            android:layout_toEndOf="@id/item_process_pending_single_tv_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" - 备注"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/item_process_pending_single_btn_status"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/item_process_pending_single_tv_title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_blue_for_common_blue_light"
            android:clickable="false"
            android:focusable="false"
            android:text="待确认"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_process_pending_single_tv_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="发起人名字"
            android:textColor="@color/gray_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_process_pending_single_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2018-18-18 18:18:18"
            android:textColor="@color/gray_text"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>