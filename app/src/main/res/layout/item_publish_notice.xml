<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/notice_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.kadh.view.CircleImageView.CircleImageView
            android:id="@+id/notice_iv_icon"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/notice_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/notice_iv_icon"
            android:layout_toRightOf="@id/notice_iv_icon"
            android:paddingTop="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notice_tv_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/notice_tv_name"
            android:layout_below="@id/notice_tv_name"
            android:paddingTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/notice_tv_creat_time"
            android:layout_marginTop="10dp"
            android:background="#F1F1F1" />

        <TextView
            android:id="@+id/notice_tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/notice_tv_creat_time"
            android:layout_below="@id/notice_tv_creat_time"
            android:layout_marginTop="20dp"
            android:text="企业发文"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notice_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/notice_tv_notice"
            android:layout_below="@id/notice_tv_notice"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/notice_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/notice_tv_type"
            android:layout_below="@id/notice_tv_type"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F1F1F1" />
</LinearLayout>