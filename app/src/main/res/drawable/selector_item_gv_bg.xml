<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/gray_half" />

            <gradient android:angle="270.0" android:endColor="@color/gray_half" android:startColor="@color/gray_half" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/gray_half" android:startColor="@color/gray_half" />

            <stroke android:width="1.0px" android:color="@color/gray_half" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <stroke android:width="1.0px" android:color="@color/gray_half" />
        </shape>
    </item>
</selector>